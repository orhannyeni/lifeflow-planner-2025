{
  "name": "lifeflow-desktop",
  "version": "1.0.0",
  "description": "LifeFlow Premium Planner Desktop App",
  "main": "public/electron.js",
  "homepage": "./",
  "author": "Orhan",
  "build": {
    "appId": "com.lifeflow.app",
    "productName": "LifeFlow Planner",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",
    "lucide-react": "0.263.1",
    "ajv": "^8.12.0",
    "ajv-keywords": "^5.1.0",
    "typescript": "4.9.5",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder -c.extraMetadata.main=build/electron.js"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}